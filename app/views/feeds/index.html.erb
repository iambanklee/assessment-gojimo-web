<p id="notice"><%= notice %></p>

<h1>Listing Feeds</h1>
<% @feeds.each do |feed| %>
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="heading<%= feed["id"] %>">
        <h4 class="panel-title">
          <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= feed["id"] %>" aria-expanded="false" aria-controls="collapse<%= feed["id"] %>">
            <%= feed["name"] %>
          </a>
        </h4>
      </div>
      <div id="collapse<%= feed["id"] %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%= feed["id"] %>">
        <div class="panel-body">
          <h4>Subjects <%= "not available" if feed["subjects"].blank? %></h4>
          <table>
            <tbody>
              <% feed["subjects"].each do |subject| %>
                <tr>
                  <td><%= subject["title"] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>
<br>